<div class="container"><br>
  <h1 class="text-center">All Users</h1>
			<div class = "row d-flex">
        <div class="col-5 list-inline border-dark">
          <% @users.each do |user| %>
          <% if user.photo.nil? %>
            <li> <%= image_tag "https://media.istockphoto.com/photos/white-dove-in-flight-1-picture-id90358935?b=1&k=20&m=90358935&s=170667a&w=0&h=zMuJNnpPWrHGLGIxZvj1oy06afWeNdoSr-zEwtkXdLw=", alt: user.name, class: "img-thumbnail rounded-circle", :size => "100%" %></li>
          <% else %>
            <li> <%= image_tag user.photo, alt: user.name, class: "img-thumbnail rounded-circle", :size => "100%" %></li>
				<% end %>
            <li><strong> Name: </strong><%= user.name %> </li>
            <li><strong> Email: </strong><%= user.email %></li>
            <li> <strong> Address: </strong><%= user.address %></li> 
          <%= link_to "More", user_path(user), class: "btn btn-outline-primary btn-sm" %>
        <% end %><br>
        </div>
      <div class="col-7 list-inline">
				<div style="width: 100%; height: 800px;"
					data-controller="mapbox"
					data-mapbox-markers-value="<%= @markers.to_json %>"
					data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
      </div>
</div>